pipeline {
    agent any
    environment {
        // Set environment variables
        TOMCAT_PATH="/Users/td/Desktop/hcv/azure_devops/apache-tomcat-9.0.98/webapps"
        COPY='cp /Users/${DIR}/.jenkins/workspace/build-webapp/webapp_build/target/try-devops-1.0.war /Users/${DIR}/Desktop/hcv/azure_devops/apache-tomcat-9.0.98/webapps'
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the repository
                sh '''
                   git clone https://github.com/thangacodes/Java-project.git
                   ls -lrt
                   pwd
                   echo "Who is the executor of this task?:" $(whoami)
                   '''
            }
        }
        stage('Change Directory') {
            steps {
                // Changing to the directory where java code is available
                sh '''
                    cd webapp_build
                    ls -lrth
                   '''
            }
        }
        stage('Compile and Build WAR') {
            steps {
                script {
                    // Run Maven to compile and build the WAR file
                    sh '''
                        cd webapp_build
                        ls -lrth
                        echo "Going to perform maven compilation.."
                        /opt/homebrew/Cellar/maven/3.9.9/libexec/bin/mvn clean package
                        pwd
                        ls -lrth
                       '''
                }
            }
        }
        stage('Deploy to Tomcat') {
            steps {
                script {
                    // Copy the WAR file to Tomcat's webapps directory
                    sh """
                    ${COPY}
                    echo "Going to check the path.."
                    ls -lrth /Users/td/Desktop/hcv/azure_devops/apache-tomcat-9.0.98/webapps
                    """
                }
            }
        }
        stage('Restart Tomcat') {
            steps {
                script {
                    // Restart Tomcat to deploy the new WAR
                    sh """
                    echo "Going to list out the files in ${TOMCAT_PATH}"
                    ls -lrt ${TOMCAT_PATH}
                    sleep 5
                    echo "**************"
                    echo "Going to start Apache tomcat service"
                    echo "**************"
                    sh /Users/td/Desktop/hcv/azure_devops/apache-tomcat-9.0.98/bin/startup.sh
                    echo "*********************************************"
                    echo "Sleeping for 200 seconds..."
                    sleep 200
                    echo "**************"
                    echo "Going to stop Apache tomcat service"
                    echo "**************"
                    sh /Users/td/Desktop/hcv/azure_devops/apache-tomcat-9.0.98/bin/shutdown.sh
                    """
                }
            }
        }
        stage('Test Deployment') {
            steps {
                script {
                    // Wait for Tomcat to fully start, then test deployment
                    sleep 120  // Wait for Tomcat to fully start
                    sh 'curl http://localhost:8090/try-devops-1.0/'  
                }
            }
        }
    }
    post {
        always {
            // Clean up resources if necessary
            echo 'Cleaning up...'
        }
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed. Check the logs.'
        }
    }
}
